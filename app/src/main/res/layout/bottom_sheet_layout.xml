<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sheet_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="14dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="#eaeaea"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/bottom_sheet_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_bg_bottom_menu">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/ic_home_white_24dp"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet_travel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_bg_bottom_menu">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/ic_travel_white_24dp"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/bottom_sheet_face"
                android:layout_width="60dp"

                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_bg_bottom_menu">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/ic_fashion_white_24dp"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/bottom_sheet_spoon"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_bg_bottom_menu">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/ic_food_white_24dp"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/bottom_sheet_cycle"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_bg_bottom_menu">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/ic_travel_white_24dp"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>